<Page
	x:Class="SamplesApp.Samples.RoutedEvents.RoutedEventsPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<Grid Margin="50" x:Name="outer" Background="Aqua" BorderBrush="Blue">
		<Border MaxHeight="50" Background="#48000000" VerticalAlignment="Top">
			<TextBlock x:Name="resultOuter" TextWrapping="Wrap" MaxHeight="50" />
		</Border>
		<Grid Margin="50" x:Name="middle" Background="Bisque" BorderBrush="Blue">
			<Border MaxHeight="50" Background="#48000000" VerticalAlignment="Top">
				<TextBlock x:Name="resultMiddle" TextWrapping="Wrap" MaxHeight="50" />
			</Border>
			<Grid Margin="50" MinWidth="200" MinHeight="200" x:Name="inner" Background="DeepSkyBlue" BorderBrush="Blue">
				<Border MaxHeight="50" Background="#48000000" VerticalAlignment="Top">
					<TextBlock x:Name="resultInner" TextWrapping="Wrap" MaxHeight="50" />
				</Border>
				<ScrollViewer Margin="30">
					<Grid Margin="50" MinWidth="200" MinHeight="200" x:Name="scroll" Background="YellowGreen" BorderBrush="Blue">
						<Border MaxHeight="50" Background="#48000000" VerticalAlignment="Top">
							<TextBlock x:Name="resultScroll" TextWrapping="Wrap" MaxHeight="50" />
						</Border>
						<Button>You can focus this button</Button>
						<TextBox VerticalAlignment="Bottom" />
					</Grid>
				</ScrollViewer>
				<TextBox VerticalAlignment="Bottom" />
			</Grid>
			<TextBox VerticalAlignment="Bottom" />
		</Grid>
		<TextBox VerticalAlignment="Bottom" />
	</Grid>
</Page>
